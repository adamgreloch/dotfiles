[colors]
background = ${xrdb:color0:#222}
foreground = ${xrdb:color7:#222}
foreground-alt = ${xrdb:color7:#222}
primary = ${xrdb:color1:#222}
secondary = ${xrdb:color2:#222}
alert = ${xrdb:color3:#222}
color9 = ${xrdb:color9:#222}

[section/look]
font-0 = Gohu GohuFont:size=11;2

;line-size = 2
width = 100%
height = 1.7%
offset-x = 0%
offset-y = 0%

background = ${colors.background}
foreground = ${colors.foreground}
;background = #AA282828
;foreground = #ebdbb2
separator = 
module-margin-right = 1
module-margin-left = 1

padding-left = 1
padding-right = 1

border-size = 0
border-color = ${xrdb:color0:#222}

override-redirect = true
wm-restack=i3

bottom = false

[bar/main-dp]
monitor = DP-0.8
fixed-center = true
modules-left = i3 polywins
modules-right = music pulseaudio cpu memory network date
inherit = section/look

[bar/main-hdmi]
monitor = HDMI-0
modules-left = i3 
modules-right=redshift
inherit = section/look

tray-position=right

[module/music]
type = custom/script
interval = 1
label = %output%
exec = ~/.config/polybar/music

[module/date]
type = internal/date
date = %H:%M - %a, %d.%m.%Y%

[module/xwindow]
type = internal/xwindow
label = %title%
label-maxlen = 100

[module/i3]
type = internal/i3

pin-workspaces = true
strip-wsnumbers = false
label-focused-foreground = ${colors.foreground}
label-unfocused-foreground = ${colors.color9}
index-sort = true
enable-click = false
enable-scroll = false
wrapping-scroll = false
reverse-scroll = false
fuzzy-match = true

[module/polywins]
type = custom/script
exec = ~/.config/polybar/polywins.sh 2>/dev/null
case="lower"
active_text_color = ${colors.foreground}
inactive_text_color = ${colors.color9}
format = <label>
label = %output%
label-padding = 1
tail = true
interval = 1

[module/network]
type = internal/network

interface = enp6s0
interval = 3.0
spacing = 1
label-connected = %ifname%
udspeed-minwidth = 1
label-disconnected = disconnected
label-disconnected-foreground = #E80424
accumulate-stats = true
unknown-as-up = true

[module/cpu]
type = internal/cpu

interval = 3
label = cpu %percentage%%

[module/memory]
type = internal/memory

interval = 3
label = ram %percentage_used%%

[module/pulseaudio]
type = internal/pulseaudio

format-volume = <label-volume> <bar-volume>

bar-volume-width = 10

bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-fill = |
bar-volume-fill-foreground = ${colors.foreground}
bar-volume-empty = |
bar-volume-empty-foreground = ${colors.color9}

sink = alsa_output.pci-0000_00_0f.3.analog-stereo

label-volume = vol %percentage%%
label-muted = %{F#999}muted ----------%{F-}

use-ui-max = false

interval = 5

# vim:ft=dosini

